generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Vehicle {
  id                     String   @id @default(uuid())
  brand                  String
  model                  String
  year                   Int
  price                  Float
  range_km               Float
  color                  String
  condition              String
  battery_capacity_kWh   Float
  charging_speed_kW      Float
  seats                  Int
  drivetrain             String
  location               String
  autopilot              Boolean
  kilometer_count        String
  accidents              Boolean
  accident_description   String?
  images                 String[]  // Prisma supports arrays for PostgreSQL
}